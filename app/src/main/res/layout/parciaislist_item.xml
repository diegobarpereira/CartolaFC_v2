<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_clube"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:src="@android:drawable/ic_dialog_info" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_toEndOf="@id/img_clube"
        android:id="@+id/tv_playerparciais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Jogador"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:textAlignment="textStart"
        android:gravity="start"
        tools:ignore="MissingConstraints"
        android:layout_toRightOf="@id/img_clube" />




    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_posicaoparciais"
        android:layout_below="@+id/tv_playerparciais"
        android:layout_toRightOf="@id/img_clube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POS"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:textAlignment="textStart"
        android:gravity="start"
        tools:ignore="MissingConstraints"
         />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_alignParentEnd="true"
            android:layout_marginStart="600dp"
            android:id="@+id/tv_pontosparciais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Pontos"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textAlignment="textStart"
            android:gravity="start"
            android:layout_marginLeft="100dp"
            tools:ignore="MissingConstraints"
            android:layout_alignParentRight="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_pontosparciais"
        android:layout_marginStart="100dp"
        android:id="@+id/tv_scouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Scouts"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:textAlignment="textStart"
        android:gravity="start"
        android:layout_marginLeft="100dp"
        tools:ignore="MissingConstraints"
        android:layout_alignParentRight="true" />

</RelativeLayout>