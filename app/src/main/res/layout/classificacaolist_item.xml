<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_column="13"
    android:layout_row="1">


    <TextView
        android:id="@+id/tv_pos"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="POS"/>
    
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_column="1"
        android:layout_row="0"
        android:textAlignment="textStart"
        android:textSize="12sp"
        android:text="TIME"/>

    <ImageView
        android:id="@+id/img_var"
        android:gravity="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="0"
        android:src="@drawable/ic_baseline_brightness_1_24"/>

    <TextView
        android:id="@+id/tv_var"
        android:gravity="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="0"
        android:textAlignment="center"
        android:textSize="8sp"
        android:text="X"/>

    <TextView
        android:id="@+id/tv_pts"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_column="4"
        android:layout_row="0"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="PTS"/>

    <TextView
        android:id="@+id/tv_jog"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_column="5"
        android:layout_row="0"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="J"/>

    <TextView
        android:id="@+id/tv_vit"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_column="6"
        android:layout_row="0"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="V"/>

    <TextView
        android:id="@+id/tv_emp"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_column="7"
        android:layout_row="0"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="E"/>

    <TextView
        android:id="@+id/tv_der"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_column="8"
        android:layout_row="0"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="D"/>

    <TextView
        android:id="@+id/tv_gp"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_column="9"
        android:layout_row="0"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="GP"/>

    <TextView
        android:id="@+id/tv_gc"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_column="10"
        android:layout_row="0"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="GC"/>

    <TextView
        android:id="@+id/tv_sg"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_column="11"
        android:layout_row="0"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="SG"/>

    <TextView
        android:id="@+id/tv_apr"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_column="12"
        android:layout_row="0"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="%"/>
    

</GridLayout>